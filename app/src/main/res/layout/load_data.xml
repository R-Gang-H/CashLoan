<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:gravity="center_horizontal"
    android:layerType="software"
    android:orientation="vertical">

    <com.dumai.xianjindai.view.viewpagerindicator.TabPageIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/text_size_42"
        android:layout_marginLeft="@dimen/text_size_68"
        android:layout_marginRight="@dimen/text_size_68"
        android:layout_marginBottom="@dimen/text_size_42"
        android:layout_weight="1"
        android:clipChildren="false" />

</LinearLayout>